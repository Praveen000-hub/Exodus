# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================
ENVIRONMENT=development
DEBUG=True

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/fairai_db

# ============================================
# REDIS (Caching)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS ORIGINS (comma-separated)
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# OPTIONAL: FIREBASE (Push Notifications)
# ============================================
# FIREBASE_SERVICE_ACCOUNT_KEY=path/to/firebase-service-account.json

# ============================================
# OPTIONAL: GOOGLE MAPS
# ============================================
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================
# ML MODELS PATH
# ============================================
ML_MODELS_PATH=../../ml/models

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_MINUTE=5

# ============================================
# BACKGROUND WORKERS
# ============================================
WORKERS_ENABLED=True
ASSIGNMENT_GENERATION_TIME=06:00
FORECAST_UPDATE_TIME=00:00
HEALTH_MONITOR_INTERVAL_SECONDS=60

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO

# ============================================
# OPTIONAL: SENTRY ERROR TRACKING
# ============================================
# SENTRY_DSN=your-sentry-dsn
# SENTRY_TRACES_SAMPLE_RATE=0.1
